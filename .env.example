# OpenAI API Configuration
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Custom OpenAI settings
VITE_OPENAI_MODEL=gpt-4o-mini
VITE_OPENAI_MAX_TOKENS=1500
# Optional OpenAI config for images
# Image generation defaults (higher quality)
# If unset, the app prefers dall-e-3 @ 1024x1024
VITE_OPENAI_IMAGE_MODEL=dall-e-3
VITE_OPENAI_IMAGE_SIZE=1024x1024
VITE_DEBUG_IMAGES=true
VITE_OPENAI_IMAGE_STYLE=natural
VITE_OPENAI_IMAGE_QUALITY=hd
VITE_DEBUG=true
# TTS defaults
VITE_OPENAI_TTS_MODEL=gpt-4o-mini-tts
VITE_OPENAI_VOICE=alloy
VITE_DEBUG_ANKI=true
